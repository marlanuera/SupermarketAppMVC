<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SunnySide Market</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

  <!-- INTERNAL CSS -->
  <style>
    body {
        background-color: #FFFBEA;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* NAVBAR */
    nav.navbar {
        background-color: #2E8B57 !important;
    }

    nav .navbar-brand {
        color: white !important;
        font-weight: bold;
        font-size: 1.5rem;
    }

    nav .nav-link {
        color: white !important;
        font-weight: bold;
    }

    nav .nav-link:hover {
        background-color: #FFD54F;
        color: black !important;
        border-radius: 5px;
    }

    /* HERO SECTION */
    .hero {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 60px 10%;
        flex-wrap: wrap;
    }

    .hero-left {
        max-width: 500px;
    }

    /* TITLE STYLING */
    .hero-left h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        line-height: 1.2;
    }

    .hero-left h1 .sunny {
        color: #FFA500; /* orange */
        font-family: 'Pacifico', cursive; /* standout font */
        font-size: 3.5rem;
        display: block; /* on its own line */
    }

    .hero-left h1 .market {
        color: #2E8B57; /* green */
        font-size: 3rem;
        display: block; /* on its own line */
    }

    .hero-left h3 {
        font-weight: normal;
        color: #555;
        margin-bottom: 10px;
    }

    .hero-left p {
        font-size: 1.2rem;
        color: #333;
    }

    .hero-right img {
        max-width: 500px;
        width: 100%;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    /* RESPONSIVE */
    @media(max-width: 768px) {
        .hero {
            flex-direction: column;
            text-align: center;
        }

        .hero-left, .hero-right {
            max-width: 100%;
        }

        .hero-right img {
            margin-top: 30px;
        }
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container-fluid">
          <a class="navbar-brand" href="#">SunnySide Market</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                      <a class="nav-link" href="/register">Register</a>
                  </li> 
                  <li class="nav-item">
                      <a class="nav-link" href="/login">Login</a>
                  </li> 
              </ul>
          </div>
      </div>
  </nav>

  <!-- HERO SECTION -->
  <section class="hero">
      <div class="hero-left">
          <h1>
            <span class="sunny">SunnySide</span>
            <span class="market">Market</span>
          </h1>
          <h3>High Quality Ingredients</h3>
          <p>Bringing Freshness to Your Neighborhood</p>
      </div>
      <div class="hero-right">
          <img src="/images/istockphoto-147002554-612x612.jpg" alt="Fresh ingredients">
      </div>
  </section>
</body>
</html>


