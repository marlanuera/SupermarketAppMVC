<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NETS QR Payment - SunnySide Market</title>

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- EventSource Polyfill -->
  <script src="https://unpkg.com/event-source-polyfill"></script>

  <style>
    body { background-color:#FFFBEA; font-family: Arial, sans-serif; margin:0; }

    .nets-title { text-align:center; font-size:28px; color:#2E8B57; margin:20px 0 5px; font-weight:bold; }
    .nets-sub { text-align:center; font-size:14px; color:#6b6b6b; margin-bottom:10px; }
    .nets-underline { width:70px; height:3px; background:#FFA500; margin:0 auto 25px; border-radius:99px; }

    .nets-container { max-width:1100px; margin:0 auto; padding:0 20px 40px; display:grid; grid-template-columns:1.6fr 1.4fr; gap:30px; }
    @media (max-width:992px){ .nets-container { grid-template-columns:1fr; } }

    .card-qr, .card-status { background:white; border-radius:12px; padding:16px; box-shadow:0 2px 6px rgba(0,0,0,0.05); border:1px solid #eee; font-size:14px; }

    .card-title { font-size:18px; color:#2E8B57; display:flex; align-items:center; gap:10px; margin-bottom:12px; font-weight:bold; }
    .pill { display:inline-flex; align-items:center; gap:6px; padding:4px 10px; background:#FFF5E1; border:1px solid #FFE2A6; border-radius:999px; font-size:12px; color:#7a5a00; font-weight: normal; }

    .hb-btn { padding:10px 16px; background:#FFA500; color:white; border:none; border-radius:20px; font-weight:700; display:inline-flex; align-items:center; gap:6px; justify-content:center; cursor:pointer; text-decoration:none; }
    .hb-btn:hover{ filter:brightness(0.97); }
    .hb-btn-outline { background:white; color:#FFA500; border:1px solid #FFA500; }

    .qr-box { border:2px dashed #FFA500; border-radius:12px; display:flex; justify-content:center; align-items:center; min-height:300px; margin-bottom:15px; }
    .qr-box img { max-width:300px; width:100%; }

    .timer-bar { height:10px; border-radius:999px; background:#eee; overflow:hidden; margin-bottom:10px; }
    .timer-progress { height:100%; background:#FFA500; width:100%; }

    .hb-mono { font-family: monospace; font-size:12px; word-break: break-all; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <h2 class="nets-title">Pay with NETS QR</h2>
  <div class="nets-sub">Scan & pay securely</div>
  <div class="nets-underline"></div>

  <div class="nets-container">

    <!-- LEFT: QR -->
    <div class="card-qr">
      <div class="card-title"><i class="bi bi-qr-code-scan"></i> Scan QR <span class="pill">NETS QR</span></div>
      <div class="qr-box">
        <img src="<%= qrCodeUrl %>" alt="NETS QR Code">
      </div>

      <div class="timer-bar">
        <div id="timeProgress" class="timer-progress"></div>
      </div>
      <div class="d-flex justify-content-between mb-2">
        <span>Time remaining</span>
        <strong id="timeRemaining">5:00</strong>
      </div>

      <div class="d-flex gap-2 mt-3">
        <a href="/checkout" class="hb-btn hb-btn-outline"><i class="bi bi-arrow-left"></i> Checkout</a>
        <a href="/cart" class="hb-btn hb-btn-outline"><i class="bi bi-cart"></i> Cart</a>
      </div>
    </div>

    <!-- RIGHT: Payment Status -->
    <div class="card-status">
      <div class="card-title"><i class="bi bi-activity"></i> Payment Status <span class="pill">LIVE</span></div>
      <div class="alert alert-warning mb-3">
        <strong id="statusTitle">Waiting for payment</strong><br>
        <span id="statusMsg">Please scan QR to proceed.</span>
      </div>

      <div class="mb-2">
        <div class="hb-muted">Transaction Ref</div>
        <div class="hb-mono"><%= txnRetrievalRef %></div>
      </div>
    </div>

  </div>

<script>
(() => {
  const txnRef = "<%= txnRetrievalRef %>";
  const countdown = 300; // 5 minutes
  let remaining = countdown;
  const timerEl = document.getElementById('timeRemaining');
  const barEl = document.getElementById('timeProgress');

  // Timer
  const timerInterval = setInterval(() => {
    remaining--;
    if (remaining < 0) {
      clearInterval(timerInterval);
      timerEl.textContent = "Expired";
      window.location.href = '/nets-qr/fail?txn_retrieval_ref=' + txnRef;
      return;
    }
    const m = Math.floor(remaining / 60);
    const s = remaining % 60;
    timerEl.textContent = `${m}:${s.toString().padStart(2,'0')}`;
    barEl.style.width = (remaining/countdown*100) + '%';
  }, 1000);

  // SSE via EventSourcePolyfill
  const headers = {
    "api-key": "<%= apiKey %>",
    "project-id": "<%= projectId %>"
  };

  const sse = new EventSourcePolyfill(`/sse/payment-status/${txnRef}`, { headers });

  sse.addEventListener('message', async (ev) => {
    const data = JSON.parse(ev.data || '{}');
    console.log('NETS SSE:', data);

    if (data.success) {
      sse.close();
      window.location.href = '/nets-qr/success?txn_retrieval_ref=' + txnRef;
    } else if (data.fail) {
      sse.close();
      window.location.href = '/nets-qr/fail?txn_retrieval_ref=' + txnRef;
    }
  });

})();
</script>

</body>
</html>

