<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Refund Requests - SunnySide Market</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
  <style>
    body { background-color: #FFFBEA; font-family: Arial, sans-serif; }
    nav.navbar { background-color: #2E8B57 !important; }
    nav .navbar-brand, nav .nav-link { color: white !important; font-weight: bold; }
    nav .nav-link:hover { background-color: #FFD54F; color: black !important; border-radius: 5px; }

    h2 { color: #2E8B57; margin-bottom: 16px; }
    .refund-card { background: white; border: 1px solid #eee; border-radius: 12px; padding: 16px; margin-bottom: 16px; box-shadow: 0 4px 10px rgba(0,0,0,0.08); }
    .meta { font-size: 0.9rem; color: #555; }
    .pill { background: #E8F5E9; color: #2E7D32; padding: 4px 10px; border-radius: 999px; font-size: 0.75rem; font-weight: 700; text-transform: capitalize; }
    .items li { font-size: 0.9rem; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h2>Refund Requests</h2>

    <% if (!orders || orders.length === 0) { %>
      <p class="text-muted">No refund requests at the moment.</p>
    <% } else { %>
      <% orders.forEach(order => { %>
        <div class="refund-card">
          <div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
            <div>
              <div class="fw-bold">Order #<%= order.orderId %> - <%= order.username %></div>
              <div class="meta">Date: <%= new Date(order.orderDate).toLocaleString() %></div>
              <div class="meta">Paid via: <%= (order.paymentMethod || 'Unknown').toString().toUpperCase() %></div>
              <div class="meta">Requested: <span class="pill"><%= order.refundPreference || 'original' %></span></div>
            </div>
            <div class="text-end">
              <div class="h5 mb-1">$<%= order.totalAmount.toFixed(2) %></div>
              <div class="meta">Wallet Used: $<%= Number(order.walletUsed || 0).toFixed(2) %></div>
              <div class="meta">Gateway Paid: $<%= Number(order.gatewayPaid || 0).toFixed(2) %></div>
            </div>
          </div>

          <ul class="items mt-3">
            <% order.items.forEach(item => { %>
              <li><%= item.productName %> x <%= item.quantity %></li>
            <% }) %>
          </ul>

          <div class="d-flex flex-wrap gap-2 mt-3">
            <form action="/admin/refunds/<%= order.orderId %>/approve" method="POST">
              <button type="submit" class="btn btn-success btn-sm">Approve & Refund</button>
            </form>
            <form action="/admin/refunds/<%= order.orderId %>/reject" method="POST" onsubmit="return confirm('Reject this refund request?');">
              <button type="submit" class="btn btn-outline-danger btn-sm">Reject</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
