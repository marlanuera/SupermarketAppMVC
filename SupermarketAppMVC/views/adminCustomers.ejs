<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Customer Accounts â€“ SunnySide Market</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
  <style>
    body { background-color: #FFFBEA; font-family: Arial, sans-serif; }
    nav.navbar { background-color: #2E8B57 !important; }
    .navbar-brand, .nav-link { color: white !important; font-weight: bold; }
    .nav-link:hover { background-color: #FFD54F; color: black !important; border-radius: 5px; }

    h2 { color: #2E8B57; margin-bottom: 20px; text-align: center; }
    .table-container { background: white; padding: 20px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.15); }
    .btn-delete { padding: 3px 8px; font-size: 0.9rem; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h2>Customer Accounts</h2>

    <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success %></div>
    <% } %>

    <% if (!customers || customers.length === 0) { %>
      <p>No customer accounts found.</p>
    <% } else { %>
      <div class="table-container">
        <table class="table table-bordered align-middle text-center">
          <thead class="table-success">
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Total Orders</th>
              <th>Total Spent</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% customers.forEach(customer => { %>
              <tr>
                <td><%= customer.username %></td>
                <td><%= customer.email %></td>
                <td><%= customer.totalOrders %></td>
                <td>$<%= customer.totalSpent ? customer.totalSpent.toFixed(2) : '0.00' %></td>
                <td>
                  <form action="/admin/customers/<%= customer.id %>/delete" method="POST" onsubmit="return confirm('Delete this customer?')">
                    <button type="submit" class="btn btn-danger btn-delete">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</body>
</html>
