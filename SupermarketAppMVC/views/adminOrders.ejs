<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Orders - SunnySide Market</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
  <style>
    body { background-color: #FFFBEA; font-family: Arial, sans-serif; }
    nav.navbar { background-color: #2E8B57 !important; }
    nav .navbar-brand, nav .nav-link { color: white !important; font-weight: bold; }
    nav .nav-link:hover { background-color: #FFD54F; color: black !important; border-radius: 5px; }

    h2 { color: #2E8B57; margin-bottom: 20px; }
    .table img { max-width: 80px; height: auto; }
    .status-pending { color: #FFA500; font-weight: bold; }
    .status-completed { color: #4CAF50; font-weight: bold; }
    .status-shipped { color: #1E90FF; font-weight: bold; }
    .btn-update { padding: 2px 6px; font-size: 0.9rem; }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>


  <div class="container mt-4">
    <h2>All Customer Orders</h2>

    <% if (!orders || orders.length === 0) { %>
      <p>No orders yet.</p>
    <% } else { %>
      <table class="table table-bordered align-middle text-center">
        <thead class="table-success">
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Items</th>
            <th>Refund</th>
            <th>Update Status</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.orderId %></td>
              <td><%= order.username %></td>
              <td><%= new Date(order.orderDate).toLocaleString() %></td>
              <td>$<%= order.totalAmount.toFixed(2) %></td>
              <td class="<%= 'status-' + order.status %>"><%= order.status %></td>
              <td>
                <ul class="list-unstyled">
                  <% order.items.forEach(item => { %>
                    <li><%= item.productName %> x <%= item.quantity %></li>
                  <% }) %>
                </ul>
              </td>
              <td>
                <% const refundStatus = (order.refundStatus || '').toLowerCase(); %>
                <% if (refundStatus === 'requested') { %>
                  <div class="mb-1">
                    Requested (<%= order.refundPreference || 'original' %>)
                  </div>
                  <form action="/admin/orders/<%= order.orderId %>/refund-approve" method="POST">
                    <button type="submit" class="btn btn-success btn-update w-100">Approve</button>
                  </form>
                <% } else if (refundStatus === 'refunded') { %>
                  <span class="text-success">Refunded</span>
                <% } else { %>
                  <span class="text-muted">â€”</span>
                <% } %>
              </td>
              <td>
                <form action="/admin/orders/<%= order.orderId %>/status" method="POST">
                  <select name="status" class="form-select form-select-sm mb-1">
                    <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                    <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                    <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
                  </select>
                  <button type="submit" class="btn btn-warning btn-update w-100">Update</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>



